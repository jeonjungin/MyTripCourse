<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="goldmoon.MyTripCourse.PasswordSetAndAuth.AuthPasswordActivity"
    android:orientation="vertical"
    android:background="@color/colorPur"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="5"
        android:layout_gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="input fingerpirnt or password"
            android:textSize="20dp"
            android:textColor="#FFFFFF"
            android:layout_gravity="center"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        android:layout_gravity="center"
        android:layout_weight="2">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/circle"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:id="@+id/inputKey1"/>
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/circle"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:id="@+id/inputKey2"/>
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/circle"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:id="@+id/inputKey3"/>
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/circle"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:id="@+id/inputKey4"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="5dp">
            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/circle1"
                android:layout_margin="5dp"
                android:id="@+id/numkey1"/>
            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/circle2"
                android:layout_margin="5dp"
                android:id="@+id/numkey2"/>
            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/circle3"
                android:layout_margin="5dp"
                android:id="@+id/numkey3"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="5dp"
            >
            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/circle4"
                android:layout_margin="5dp"
                android:id="@+id/numkey4"/>
            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/circle5"
                android:layout_margin="5dp"
                android:id="@+id/numkey5"/>
            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/circle6"
                android:layout_margin="5dp"
                android:id="@+id/numkey6"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="5dp">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/circle7"
                android:layout_margin="5dp"
                android:id="@+id/numkey7"/>
            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/circle8"
                android:layout_margin="5dp"
                android:id="@+id/numkey8"/>
            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/circle9"
                android:layout_margin="5dp"
                android:id="@+id/numkey9"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="5dp">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/circle_back"
                android:layout_margin="5dp"
                android:id="@+id/numkeyB"/>
            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/circle0"
                android:layout_margin="5dp"
                android:id="@+id/numkey0"/>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>
